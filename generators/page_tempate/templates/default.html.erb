<div id="main-content">
  <h1><%= @page.title %></h1>
  
  <%= @page.body %>
</div><!-- eo: main -->

<ul class="page-nav">
<% for page in @page.root? ? @page.children.published : @page.self_and_siblings.published %>
  <li><%= link_to_unless_current h(page.title), page_path(page.permalink) %></li>
<% end -%>
</ul>
